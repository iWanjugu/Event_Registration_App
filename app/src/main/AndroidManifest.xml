<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mini_projects.eventreg" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <!--android:theme="@style/custom_actionbar_style"-->

        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Main"
            android:label="@string/app_name">
        </activity>


        <activity
            android:name=".EventDetails"
            android:label="@string/event">
            <intent-filter>
                <action android:name="android.intent.action.EVENTDETAILS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Speakers"
            android:label="@string/speakers" >
            <intent-filter>
                <action android:name="android.intent.action.SPEAKERS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Agenda"
            android:label="@string/agenda" >
            <intent-filter>
                <action android:name="android.intent.action.AGENDA" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Info"
            android:label="@string/info"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.INFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Twitter"
            android:label="@string/twitter" >
            <intent-filter>
                <action android:name="android.intent.action.TWITTER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Wifi"
            android:label="@string/wifi" >
            <intent-filter>
                <action android:name="android.intent.action.WIFI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Day_1"
            android:label="@string/day1" >
            <intent-filter>
                <action android:name="android.intent.action.DAYONE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Venue"
            android:label="@string/venue" >
            <intent-filter>
                <action android:name="android.intent.action.VENUE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Location_1"
            android:label="@string/location1" >
            <intent-filter>
                <action android:name="android.intent.action.LOCATIONONE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


    </application>

</manifest>
